<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inspiredo.latch.ActionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".TodayActivity">


        <TextView
            style="@style/today_header_text"
            android:text="@string/action_header_title"
            android:id="@+id/action_header_title"
            />

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:footerDividersEnabled="false"
            android:overScrollFooter="@android:color/transparent"
            android:id="@+id/action_list"
            android:dividerHeight="4px"
            android:divider="@null"
            />



    </LinearLayout>

    <com.inspiredo.latch.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        app:color="@color/accent"
        app:icon="@drawable/ic_action_new"/>

</FrameLayout>
